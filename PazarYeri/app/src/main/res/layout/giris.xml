<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FAFBFF"
    android:layout_height="match_parent"

    android:layout_gravity="center"
    tools:context=".Giris">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/beyaz">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Logn in"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    android:id="@+id/giris_kaydol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="Sign up"
                    android:textColor="#808080"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </RelativeLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/logo"
            android:layout_gravity="center_horizontal"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            app:boxBackgroundColor="@color/mavi"
            app:boxStrokeColor="@color/mavi"
            android:outlineSpotShadowColor="@color/mavi"
            android:textColorHint="@color/mavi"
            android:outlineAmbientShadowColor="@color/mavi"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/kuladigiris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="User name or email"
                android:inputType="textPersonName"
                android:textColor="@color/mavi" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            app:passwordToggleEnabled="true"
            android:layout_marginTop="25dp"
            app:boxBackgroundColor="@color/mavi"
            app:boxStrokeColor="@color/mavi"
            android:outlineSpotShadowColor="@color/mavi"
            android:textColorHint="@color/mavi"
            android:outlineAmbientShadowColor="@color/mavi"
            android:layout_height="wrap_content"
            android:id="@+id/inputpass">

            <EditText
                android:id="@+id/sifregiris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="password"
                android:imeOptions="actionSend"
                android:inputType="textPassword" /></com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/grsbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/yuvarlak_mavi"
            android:text="Sign in"
            android:textColor="@color/beyaz"></Button>
    </LinearLayout>

</LinearLayout>