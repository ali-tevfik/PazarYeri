<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="2"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 "
            android:id="@+id/siparis_ayrinti_adet"/>
        <TextView
            android:layout_weight="3"
            android:textSize="15dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Domates"
            android:id="@+id/siparis_ayrinti_urun_name"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1">
    <RatingBar
            android:id="@+id/rating_siparisayrinti_tek"
            android:outlineAmbientShadowColor="@color/mavi"
            android:outlineSpotShadowColor="@color/mavi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="5"
            android:stepSize="1.1"
            android:isIndicator="false" />

</LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>