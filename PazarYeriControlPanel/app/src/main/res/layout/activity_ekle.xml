<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".urun.ekle">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        app:boxBackgroundColor="@color/mavi"
        app:boxStrokeColor="@color/mavi"
        android:outlineSpotShadowColor="@color/mavi"
        android:textColorHint="@color/mavi"
        android:outlineAmbientShadowColor="@color/mavi"
        android:layout_height="wrap_content">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="isim"
            android:ems="10"
            android:id="@+id/urun_ekle_name" />
    </com.google.android.material.textfield.TextInputLayout> <com.google.android.material.textfield.TextInputLayout
    android:layout_width="match_parent"
    android:layout_marginTop="25dp"
    app:boxBackgroundColor="@color/mavi"
    app:boxStrokeColor="@color/mavi"
    android:outlineSpotShadowColor="@color/mavi"
    android:textColorHint="@color/mavi"
    android:outlineAmbientShadowColor="@color/mavi"
    android:layout_height="wrap_content">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="info"
        android:ems="10"
        android:id="@+id/urun_ekle_info" />


</com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <com.google.android.material.textfield.TextInputLayout
    android:layout_width="wrap_content"
    android:layout_marginTop="25dp"
        app:boxBackgroundColor="@color/mavi"
        app:boxStrokeColor="@color/mavi"
        android:outlineSpotShadowColor="@color/mavi"
        android:textColorHint="@color/mavi"
        android:outlineAmbientShadowColor="@color/mavi"
    android:layout_height="wrap_content">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Fiyat"
        android:ems="10"
        android:id="@+id/urun_ekle_fiyat" />
</com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
    android:layout_width="wrap_content"
    android:layout_marginTop="25dp"
        app:boxBackgroundColor="@color/mavi"
        app:boxStrokeColor="@color/mavi"
        android:outlineSpotShadowColor="@color/mavi"
        android:textColorHint="@color/mavi"
        android:outlineAmbientShadowColor="@color/mavi"
    android:layout_height="wrap_content">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cesit"
        android:ems="10"
        android:id="@+id/urun_ekle_cesit" />
</com.google.android.material.textfield.TextInputLayout>
</LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        android:id="@+id/imgurun"
        android:src="@mipmap/delete"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:text="kaydet"
            android:layout_height="50dp"
            android:background="@drawable/yuvarlak_mavi"
            android:layout_marginRight="20dp"
            android:textColor="@color/beyaz"
            android:id="@+id/urun_kaydet"/>
        <Button
            android:layout_width="wrap_content"
            android:text="resim ekle"
            android:background="@drawable/yuvarlak_mavi"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/beyaz"
            android:id="@+id/resimekle"/>
    </LinearLayout>

</LinearLayout>